<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Farm_App.Pages.DeleteAnimal"
             Title="Delete Animal"
             BackgroundColor="White">
   <Grid HorizontalOptions="Center"
          RowDefinitions="*,*,*,*,*,*,*" RowSpacing="25" VerticalOptions="Center" >
        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="FontSize" Value="Small"/>
                <Setter Property="HeightRequest" Value="20"/>
                <Setter Property="WidthRequest" Value="350"/>
                <Setter Property="TextColor" Value="Black"/>
            </Style>
        </Grid.Resources>
        <Label Grid.Row="0" Text="Delete Animal" FontSize="Large"/>
        <Label Grid.Row="1" Text="Enter Animal ID" FontSize="Small"/>
        <Entry x:Name="Id_Entry" Grid.Row="2" Placeholder="Enter animal ID:"  BackgroundColor="#FFC9DBEB"/>
        
        <Button Grid.Row="4" Clicked="Reset_Btn" Text="RESET" BackgroundColor="#FF7373DD"/>
        <Button Grid.Row="5" Clicked="Delete_Btn" Text="DELETE" BackgroundColor="#FFCC5252"/>
    </Grid>
</ContentPage>